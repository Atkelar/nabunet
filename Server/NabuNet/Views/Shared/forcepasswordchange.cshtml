@model ForcePasswordChangeModel
<h1>Password Update Required</h1>
<p>Your password is expired and needs to be changed.</p>
<form asp-action="forcepasswordchange" asp-controller="profile" asp-route-returnurl="@ViewBag.ReturnUrl">
    @if (string.IsNullOrWhiteSpace(Model.Token))
    {
        <label asp-for="OldPassword"></label> <input type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    }
    else
    {
        <input type="hidden" asp-for="Token" />
    }
    <label asp-for="NewPassword"></label> <input type="password" asp-for="NewPassword" />
    <span asp-validation-for="NewPassword"></span>
    <label asp-for="NewPasswordRetype"></label> <input type="password" asp-for="NewPasswordRetype" />
    <span asp-validation-for="NewPasswordRetype"></span>

    <button type="submit">Change...</button>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}